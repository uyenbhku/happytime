{
    "manifest_version": 2,
    "name": "HappyTime",
    "version": "0.0.1",
    "description": "Embrace time, embrace yourself, grow happiness!",
    "content_scripts":[ 
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "icons": { "48": "./assets/logo/logo48.png", "128": "./assets/logo/logo128.png" },
    "browser_action": 
        {
            "default_popup": "popup.html",
            "default_title": "Happy Time"
        }
}